@model WardrobeMVCProject.Models.Article

@{
    ViewBag.Title = "Delete";
}

<div class="page-header textBox container body-content">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
</div>

<div class="alternateTextBox">
    <div class="row thumbnail deletePhoto">
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Url.Content(Model.Photo)" />
        }
        else
        {
            <img src="~/Content/images/No-Photo-Available-240x300.jpg" />
        }
    </div>
    <hr />
    <dl class="dl-horizontal textLeft">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArticleType.ArticleType1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleType.ArticleType1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Color.Color1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color.Color1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Occasion.Occasion1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Occasion.Occasion1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Season.Season1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Season.Season1)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn superheroBtn" />
            <p>
                @Html.ActionLink("Articles", "Index", new { }, new { @class = "btn superheroBtn", role = "button" })
                @Html.ActionLink("Suits", "Suits", new { }, new { @class = "btn superheroBtn", role = "button" })
                @Html.ActionLink("Capes", "Capes", new { }, new { @class = "btn superheroBtn", role = "button" })
                @Html.ActionLink("Shoes", "Shoes", new { }, new { @class = "btn superheroBtn", role = "button" })
                @Html.ActionLink("Accessories", "Accessories", new { }, new { @class = "btn superheroBtn", role = "button" })
            </p>
        </div>
    }
</div>
