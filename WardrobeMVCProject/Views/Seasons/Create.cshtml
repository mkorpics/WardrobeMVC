@model WardrobeMVCProject.Models.Season

@{
    ViewBag.Title = "Create";
}

<div class="page-header textBox container">
    <h2>Create</h2>
</div>

<div class="alternateTextBox">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Season</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Season1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Season1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Season1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Create" class="btn superheroBtn" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Articles", "~/Articles/Index", new { }, new { @class = "btn superheroBtn", role = "button" })
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
