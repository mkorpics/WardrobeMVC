@model WardrobeMVCProject.Models.Color

@{
    ViewBag.Title = "Edit";
}

<div class="page-header textBox container">
    <h2>Edit Color</h2>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="alternateTextBox">
        <div class="form-horizontal">
            <h4>Color</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ColorID)

            <div class="form-group">
                @Html.LabelFor(model => model.Color1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Color1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Color1, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Save" class="btn superheroBtn" />
                </div>
            </div>
        </div>



        <div>
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn superheroBtn", role = "button" })
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
