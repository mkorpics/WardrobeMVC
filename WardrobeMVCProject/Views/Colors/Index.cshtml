@model IEnumerable<WardrobeMVCProject.Models.Color>

@{
    ViewBag.Title = "Index";
}

<div class="page-header textBox container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn superheroBtn", role = "button" })
    </p>

</div>

<div class="alternateTextBox">
    <table class="table">
        <tr>
            <th class="bold">
                @Html.DisplayNameFor(model => model.Color1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="textLeft">
                    @Html.DisplayFor(modelItem => item.Color1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ColorID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ColorID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ColorID })
                </td>
            </tr>
        }

    </table>
</div>
