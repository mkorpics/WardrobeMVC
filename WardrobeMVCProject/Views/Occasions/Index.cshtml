@model IEnumerable<WardrobeMVCProject.Models.Occasion>

@{
    ViewBag.Title = "Index";
}

<div class="page-header textBox container">
    <h2>Occassions</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn superheroBtn", role = "button" })
    </p>
    <p>
        @Html.ActionLink("Back to Articles", "Index", "Articles", new { }, new { @class = "btn superheroBtn", role = "button" })
    </p>
</div>

<div class="alternateTextBox">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Occasion1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Occasion1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OccasionID }) |
