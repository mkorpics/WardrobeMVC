<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Khula|Open+Sans|Source+Sans+Pro" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bangers|Bungee+Inline|Bungee+Shade|Special+Elite" rel="stylesheet">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("T F F", "Index", "Home", new { area = "" }, new { @class = "navbar-brand brandName" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" ", "Index", "Home", new { }, new { @class = "navbarLink glyphicon glyphicon-home" })</li>
                    <li>@Html.ActionLink("Manage Your Articles", "Index", "Articles", new { }, new { @class = "navbarLink" })</li>
                    <li>@Html.ActionLink("Suits", "Suits", "Articles", new { }, new { @class = "navbarLink" })</li>
                    <li>@Html.ActionLink("Shoes", "Shoes", "Articles", new { }, new { @class = "navbarLink" })</li>
                    <li>@Html.ActionLink("Capes", "Capes", "Articles", new { }, new { @class = "navbarLink" })</li>
                    <li>@Html.ActionLink("Accessories", "Accessories", "Articles", new { }, new { @class = "navbarLink" })</li>
                    <li>@Html.ActionLink("Outfits", "Index", "Outfits", new { }, new { @class = "navbarLink" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Too Fantastic Fashion, by The Too Fantastic</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
